# Twilio Configuration
TWILIO_ACCOUNT_SID=your_twilio_account_sid_here
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
TWILIO_PHONE_NUMBER=whatsapp:+14155238886

# Security Settings
# Comma-separated list of allowed phone numbers (include country code)
ALLOWED_PHONE_NUMBERS=+1234567890,+0987654321

# AutoCoder Integration
AUTOCODER_API_URL=http://localhost:5000/api
AUTOCODER_MCP_URL=http://localhost:5000
AUTOCODER_API_KEY=your_autocoder_api_key_here

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# Application Settings
LOG_LEVEL=INFO
SESSION_TTL_HOURS=24
MAX_MESSAGE_LENGTH=1600
DEFAULT_AGENT_MODEL=openai/gpt-4o

# Feature Flags
ENABLE_RATE_LIMITING=true
ENABLE_VISION_SUPPORT=false

# OpenAI Configuration (for LangChain)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4

# Optional: AWS S3 for file storage
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_S3_BUCKET=whatsapp-coder-files
AWS_REGION=us-east-1

# Optional: Monitoring
SENTRY_DSN=your_sentry_dsn_here
PROMETHEUS_PORT=9090

# Development Settings (remove in production)
DEBUG=false
MOCK_MCP_CLIENT=false
